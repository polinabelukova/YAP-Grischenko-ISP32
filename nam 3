using System;
using System.Linq;

namespace ConsoleApp4
{
    class Program
    {
        static void Main()
        {
            int n = Convert.ToInt32(Console.ReadLine());

            string g = "*".PadLeft(n+10);
            
            for (int i = 0; i < n; i++)
            {
               
                Console.WriteLine(g);
                 g = g.Substring(1) + "**";
            }
        }
    }
}
