using System;
using System.Linq;

namespace ConsoleApp4
{
    class Program
    {
        static void Main()
        {

            int number = Convert.ToInt32(Console.ReadLine());
            int count = 0;
                while (number != 1) {

                if (number % 2 == 0) {
                    number = number/ 2;
                }
                    else {
                    number = 3 * number + 1;
                }   
                 count++;
                }
             Console.WriteLine  ($"Количество необходимых действий над числом - {count}");
            
            
        }
    }
    
}
